{
  "id": "workflow_translate_selected_text_replace",
  "name": "Translate Selection â†’ Replace In Page (German)",
  "description": "Translates the currently selected text on the page to German and replaces the original selection with the translated text.",
  "version": "1.0.0",
  "enabled": true,
  "createdAt": 1761850000000,
  "updatedAt": 1761850000000,
  "dataPoints": [],
  "websiteConfig": {
    "type": "all",
    "patterns": ""
  },
  "triggers": [
    {
      "type": "manual",
      "shortcut": "ctrl+shift+t"
    }
  ],
  "steps": [
    {
      "id": "step_detect_language",
      "type": "task",
      "taskId": "language_detection",
      "delay": 0,
      "condition": "",
      "input": {
        "text": "${selected_text.text}"
      }
    },
    {
      "id": "step_translate_selection",
      "type": "task",
      "taskId": "translation",
      "delay": 0,
      "condition": "",
      "input": {
        "text": "${selected_text.text}",
        "sourceLanguage": "${step_detect_language_output.languageCode}",
        "targetLanguage": "de"
      }
    },
    {
      "id": "step_replace_selection",
      "type": "handler",
      "handlerId": "replace_selected_text",
      "delay": 0,
      "condition": "",
      "input": {
        "text": "${step_translate_selection_output.translatedText}"
      }
    }
  ]
}


